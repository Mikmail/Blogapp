.grid.justify-center.m-20.bg-gray-400
  .border-2
    %strong Title: 
    %p 
      = @article.title 
    %br
    %strong Text: 
    %p
      = @article.body
    %br
  .border-2
    = link_to "Edit", edit_article_path(@article)
  %br
  .border-2
    = link_to article_path(@article), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} do
      Delete
  %br
  .border-2.rounded-md.border-black
    = link_to "Back", articles_path
  %br
  = render @article.comments
  %br
  = render 'comments/form'