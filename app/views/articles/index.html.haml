.grid.gap-6.text-center.m-auto.p-2
  %h1.font-bold.text-2xl Articles

  %ul
    - @articles.each do |article|
      - unless article.archived?
        .border-2.rounded-md.m-4  
          = link_to article.title, article
  %br
  
    %ul.bg-green-400.rounded-md
      = link_to "New article", new_article_path
